.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "WhereMyMates", root_path, :class => 'brand'
      .container.nav-collapse
        %ul.nav
          - my_team = current_user.team if current_user
          - if my_team
            %li= link_to "My Team: #{my_team.name}", my_team
            %li= mail_to "enter_real_email_@_please", "Invite member!",
              :subject => 'Invitation letter to wheremymates.com', :body => signin_url(:invitation_key => my_team.invitation_key)
        - if current_user
          %ul.nav.pull-right
            %li.dropdown
              %a.dropdown-toggle{ data: { toggle: "dropdown" } }
                = current_user.name
                %b.caret
              %ul.dropdown-menu
                %li= link_to "Sign out", signout_path
        - else
          %p.navbar-text.pull-right= link_to "Sign in with Facebook", signin_path, class: "navbar-link"
