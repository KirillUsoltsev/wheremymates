.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    %div{class: (controller_name == "main" ? "container" : "container-fluid" )}
      %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "WhereMyMates", root_path, :class => 'brand'
      .nav-collapse{class: (controller_name == "main" ? "container" : "container-fluid" )}
        - if current_user
          %ul.nav
            - if my_team = current_user.team
              %li
                = link_to "My Team: #{my_team.name}", my_team
              %li
                = link_to "Leave", [:leave, my_team], :confirm => 'Are you sure?', :method => :put
            - if current_user.team
              %li
                %a#invite-menu-link{data: {need_popover: current_user.team.users.one?.to_s, placement: "bottom", title: "Invite mates", content: "Now invite other members of your team to see tham on the map", trigger: "manual"}} Invite mates

        - if current_user
          %ul.nav.pull-right
            %li.dropdown
              %a.dropdown-toggle{ data: { toggle: "dropdown" } }
                = current_user.name
                %b.caret
              %ul.dropdown-menu
                %li= link_to "Sign out", signout_path
        - else
          %p.navbar-text.pull-right= link_to "Sign in with Facebook", signin_path, class: "btn btn-primary"
