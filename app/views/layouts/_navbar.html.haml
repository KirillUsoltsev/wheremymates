.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand(href="#") WhereMyMates
      .container.nav-collapse
        %ul.nav
          - if current_user
            %li= link_to current_user.name, "#"
            - if current_user.team
              %li= link_to "(#{current_user.team.name})", :team_id => current_user.team.id
            %li= link_to "Sign out", signout_path
          - else
            %li= link_to "Sign in with Facebook", signin_path
