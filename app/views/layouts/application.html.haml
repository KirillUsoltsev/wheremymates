!!! 5
%html
  %head
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "https://maps.google.com/maps/api/js?sensor=true&libraries=geometry"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %div
      - if current_user
        %p
          Hi, #{current_user.id} (Team: #{current_user.team.name})
          = link_to "Sign out", signout_path
      - else
        %p= link_to "Sign in with Facebook", "/auth/facebook"
    %div
      = yield
